<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_add_jadwal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="6dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lblTopPertemuan"
                style="@style/AppTextView.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Penilaian"
                android:textSize="17sp"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_tanggal"
                style="@style/AppTextView.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Pilih Peserta"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblTopPertemuan" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                app:layout_constraintStart_toStartOf="@+id/lbl_tanggal"
                app:layout_constraintTop_toBottomOf="@+id/lbl_tanggal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_tanggal2"
                style="@style/AppTextView.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Grade Nilai Magang"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner" />

            <EditText
                android:id="@+id/etGradeA"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_rounded_border_black"
                android:hint="A"
                android:paddingLeft="8dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_tanggal2"
                tools:layout_editor_absoluteX="6dp" />

            <TextView
                android:id="@+id/lblGradeB"
                style="@style/AppTextView.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Grade Nilai Uji Kompetensi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etGradeA" />

            <EditText
                android:id="@+id/etGradeA2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_rounded_border_black"
                android:hint="A"
                android:paddingLeft="8dp"
                app:layout_constraintTop_toBottomOf="@+id/lblGradeB"
                tools:layout_editor_absoluteX="6dp" />

            <TextView
                android:id="@+id/lblGradeB2"
                style="@style/AppTextView.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Grade Nilai Kedisiplinan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etGradeA2" />

            <EditText
                android:id="@+id/etGradeA3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_rounded_border_black"
                android:hint="A"
                android:paddingLeft="8dp"
                app:layout_constraintTop_toBottomOf="@+id/lblGradeB2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/BtnApply"
                style="@style/GreenBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="12dp"
                android:text="Post Nilai"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etGradeA3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@+id/cv_add_jadwal"/>

</androidx.constraintlayout.widget.ConstraintLayout>